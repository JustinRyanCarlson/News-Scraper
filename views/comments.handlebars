<div class="container spacer">
    {{#each articles}}
    <div class="row">
        <h2 class="text-center comment-header">Comments</h2>
    </div>
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-3">
            <img src="{{this.photoLink}}" alt="Post IMG">
        </div>
        <div class="col-sm-7">
            <h4>{{this.title}}</h4>
            <br>
            <p>{{this.excerpt}}</p>
            <a href="{{this.link}}" target="_BLANK">View this article on TechCrunch</a>
        </div>
        <div class="col-sm-1"></div>
    </div>
    <hr> {{/each}}
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <form action="submit">
                <div class="form-group">
                    <label for="author">Comment Author</label>
                    <input type="text" class="form-control" id="author">
                </div>
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <textarea class="form-control" id="comment" rows="8"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block post-comment">Submit</button>
            </form>
        </div>
        <div class="col-sm-2"></div>
    </div>
</div>